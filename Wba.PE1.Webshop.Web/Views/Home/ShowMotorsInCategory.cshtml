@model pe1.Webshop.Web.ViewModels.HomeShowMotorsInCategoryVM
@{
    ViewData["Title"] = "ShowMotorsInCategory";
}

<h2>All motors in <span class="category">@Model.CategoryName</span> category</h2>

<div class="container">
    <div class="row">
        @foreach (var motor in Model.Motors)
        {
            <div class="col-md-6">
                <div class="text-center">
                    <img src="@motor.Image.First()" alt="@motor.Name" height="325" max-width="99%" /><br />
                    <h2>@motor.Name</h2>
                    <h3>@motor.Brand.Name</h3>
                    <h3>€ @String.Format("{0:### ###}", motor.Price.ToString("### ###"))</h3>
                    <div class="btn-group">
                        <a class="btn btn-primary btn-lg" href="/motors/@motor.Id">More details</a>
                    </div>
                    <br /><br />
                </div>
            </div>
        }
    </div>
</div>